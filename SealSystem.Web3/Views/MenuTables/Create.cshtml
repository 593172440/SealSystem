@model SealSystem.Models.MenuTable
<div class="container body">
    <div class="main_container">
        <!--右上角头像区-->
        @Html.Partial("~/Views/Shared/_PartialTopHeadImages.cshtml");
        <!--/右上角头像区-->
        <!--顶部导航-->
        <div class="top_nav">
            <div class="nav_menu">
                @Html.Partial("~/Views/Shared/_PartialTopNavigation.cshtml");
            </div>
        </div>
        <!--/顶部导航 -->
        <!-- page content -->
        <div class="right_col" role="main" style=null>
            <div class="">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>增加菜单 <small>注：尽量将菜单编号安顺序来</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>
                                                <a href="#">Settings 1</a>
                                            </li>
                                            <li>
                                                <a href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <br />
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                菜单编号 <span class="required">*</span>
                                            </label>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                @Html.EditorFor(model => model.CodeId, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", id = "first-name", required = "required" } })
                                                @Html.ValidationMessageFor(model => model.CodeId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                菜单名称 <span class="required">*</span>
                                            </label>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", id = "first-name", required = "required" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                上级菜单编号 <span class="required">*</span>
                                            </label>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                @Html.EditorFor(model => model.SuperiorCodeId, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", id = "first-name", required = "required" } })
                                                @Html.ValidationMessageFor(model => model.SuperiorCodeId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                菜单路径 <span class="required">*</span>
                                            </label>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                @Html.EditorFor(model => model.MenuPath, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", id = "first-name", required = "required" } })
                                                @Html.ValidationMessageFor(model => model.MenuPath, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="row ">
                                            
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name"> 增加权限 </label>
                                                <div class="col-md-4 col-sm-6 col-xs-12">
                                                    @Html.EditorFor(model => model.Add)
                                                    @Html.ValidationMessageFor(model => model.Add, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                    修改权限 <span class="required"></span>
                                                </label>
                                                <div class="col-md-4 col-sm-6 col-xs-12">
                                                    @Html.EditorFor(model => model.Edit)
                                                    @Html.ValidationMessageFor(model => model.Edit, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                    查看权限 <span class="required"></span>
                                                </label>
                                                <div class="col-md-4 col-sm-6 col-xs-12">

                                                    @Html.EditorFor(model => model.Details)
                                                    @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                    删除权限 <span class="required"></span>
                                                </label>
                                                <div class="col-md-4 col-sm-6 col-xs-12">

                                                    @Html.EditorFor(model => model.Delete)
                                                    @Html.ValidationMessageFor(model => model.Delete, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="ln_solid"></div>
                                        <div class="form-group">
                                            <div class="col-md-8 col-sm-6 col-xs-12 col-md-offset-3">
                                                @Html.ActionLink("返回列表", "Index", "", new { @class = "btn btn-primary" })
                                                <button type="submit" class="btn btn-success" style="width:240px">提交</button>
                                                <button class="btn btn-primary" type="reset">重写</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        @Html.Partial("~/Views/Shared/_PartialFooter.cshtml");
    </div>
</div>