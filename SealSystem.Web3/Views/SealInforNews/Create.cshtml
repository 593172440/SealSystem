    <script>
        function danWeiName() {//要搜索的单位名称
            console.log($("#SealUseUnitInfor_Id_UnitNumber").val());

            $("#SealUseUnitInfor_Id_UnitNumber").val($("#SealUseUnitInfor_Id_UnitNumber").val());
