                ForTheRecordType: $("#ForTheRecordType").val(),//备案类型
            }
            
            console.log(JSON.stringify(all_result));
            console.log(arss);
            

            $.ajax({
                type: "post",
                url: "/SealInforNews/CreateSealList",
                data: {
                    "seal": JSON.stringify(all_result),
                    "ars": JSON.stringify(arss)
                },
                traditional: true,
                dataType: "json",
                success: function (result) {
