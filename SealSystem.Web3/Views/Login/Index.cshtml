@model SealSystem.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>用户登录</title>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/Content/nprogress.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/Content/custom.min.css" rel="stylesheet" />
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <h1>信息中心管理系统</h1>
                        <div>
                            <input name="userName" type="text" class="form-control" placeholder="用户名" required="" />
                        </div>
                        <div>
                            <input name="UserPwd" type="password" class="form-control" placeholder="密码" required="" />
                        </div>
                        <div>
                            @*<a class="btn btn-default submit" style="width:80px">登录</a>*@
                            <button class="btn btn-default submit" style="width:80px">登录</button>
                            <a class="reset_pass" href="#">忘记密码?</a>
                        </div>
                    }
                    </section>
            </div>
           
        </div>
    </div>
</body>
</html>

